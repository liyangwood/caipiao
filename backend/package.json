{
  "name": "caipiao-backend",
  "version": "0.0.1",
  "scripts": {
    "start": "nodemon --config nodemon-debug.json",
    "//debug": "nodemon --config nodemon.json",
    "build": "npm run build:ts",
    "build:ts": "tsc",
    "tsc": "tsc || echo TSC compilation has errors.",
    "tslint": "tslint -c tslint.json -p tsconfig.json -t codeFrame",
    "//setup-pm2": "npm install -g pm2 && pm2 install pm2-logrotate",
    "//start:staging": "npm run build && npm run setup-pm2 && pm2 delete all; NODE_ENV=staging pm2 start dist/index.js --node-args='--max-old-space-size=1768' --log-date-format 'DD-MM HH:mm:ss.SSS' --log ./output.log && tail -f /dev/null",
    "//start:production": "npm run build && npm run setup-pm2 && pm2 delete all; NODE_ENV=production pm2 start dist/index.js --node-args='--max-old-space-size=1768' --log-date-format 'DD-MM HH:mm:ss.SSS' --log ./output.log && tail -f /dev/null",
    "unit": "NODE_ENV=test jest --config test/unit/jest.conf.js --coverage",
    "//test:prod": "node node_modules/jest/bin/jest.js --config test/unit/jest.conf.js --runInBand --bail --setupTestFrameworkScriptFile=./test/jest_setup.js --forceExit",
    "test": "npm run unit",

    "shell:get_ssq_data": "nodemon --config ./shell/nodemon.json ./shell/get_ssq_data.ts"
  },
  "dependencies": {
    "bcrypt": "3.0.6",
    "body-parser": "1.19.0",
    "compression": "1.7.3",
    "connect-mongo": "2.0.1",
    "connect-redis": "3.3.3",
    "connect-timeout": "1.9.0",
    "cookie-parser": "1.4.4",
    "cookie-session": "1.3.3",
    "cors": "2.8.4",
    "crypto-js": "3.1.9-1",
    "dotenv": "8.0.0",
    "express": "4.17.1",
    "express-fileupload": "1.1.4",
    "express-jwt": "^5.3.0",
    "express-session": "^1.15.6",
    "fs-extra": "8.0.1",
    "helmet": "3.18.0",
    "http-status": "1.3.2",
    "lodash": "4.17.11",
    "moment": "^2.29.4",
    "mongoose": "^5.1.0",
    "morgan": "1.9.1",
    "newrelic": "5.9.1",
    "querystring": "0.2.0",
    "request": "2.88.0",
    "uuid": "^3.2.1",
    "validator": "11.0.0"
  },
  "devDependencies": {
    "@types/http-status": "0.2.30",
    "@types/optimist": "0.0.29",
    "@types/chai": "4.1.7",
    "@types/connect-timeout": "0.0.34",
    "@types/cucumber": "4.0.5",
    "@types/dotenv": "4.0.1",
    "@types/express": "4.16.1",
    "@types/helmet": "0.0.43",
    "@types/jest": "24.0.13",
    "@types/js-yaml": "3.12.1",
    "@types/lodash": "^4.14.109",
    "@types/mongoose": "^5.0.13",
    "chai": "4.1.2",
    "jest": "24.8.0",
    "nodemon": "1.19.1",
    "ts-jest": "24.0.2",
    "ts-node": "8.2.0",
    "tslint": "5.8.0",
    "typescript": "3.4.5"
  },
  "engines": {
    "node": ">=9.10.0"
  }
}
